{% extends "base.html" %}

{% block content %}
<div class="container">
<div class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title">Login</h3>
	</div>
	
	{% if errors %}
                <div class="panel panel-default">
                        <div class="panel-body">
                {% for error in errors %}
                        {{ error }}<br>
                {% endfor %}
                        </div>
                </div>
        {% endif %}

	<div class="panel-body">
		<form method="post" class="form-horizontal" action="#">
			{% csrf_token %}
			
			<div class="form-group">
                            {{ form.username.errors }}
                            <label for="{{ form.username.id_for_label }}" class="control-label col-xs-2">Username: </label>
                            <div class="col-xs-10">
                                {{ form.username }}
                            </div>
                        </div>
			
			<div class="form-group">
                            {{ form.password.errors }}
                            <label for="{{ form.password.id_for_label }}" class="control-label col-xs-2">Password: </label>
                            <div class="col-xs-10">
                                {{ form.password }}
                            </div>
                        </div>
                        
			<div class="form-group">
                            <div class="col-xs-offset-2 col-xs-10">
                                <button type="submit" class="btn btn-primary">Login</button>
                            </div>
                        </div>
		</form>
		<hr>
		
		<div class="btn-group pull-right">
                    Don't have an account? <span><a class="btn btn-primary" href="/register">Register</a></span>
                </div>
	<div>
</div>
</div>
{% endblock %}